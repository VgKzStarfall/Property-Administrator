<Window x:Class="zPage.FeatureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:zPage"
        mc:Ignorable="d"
        Title="FeatureWindow" Height="450" Width="400">
    <Grid>
        <Label Name="lbTitle" Content="Features For Name" FontSize="30" FontWeight="Bold" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="45" Width="276"/>
        <DataGrid Name="dgFeatures" Margin="0,90,0,108" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Feature Description" Binding="{Binding FeatureDescription}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Name="btnNew" Content="New" HorizontalAlignment="Left" Margin="42,375,0,0" VerticalAlignment="Top" Click="btnNew_Click"/>
        <Button Name="btnUpdate"  Content="Update" HorizontalAlignment="Center" Margin="0,375,0,0" VerticalAlignment="Top" Click="btnUpdate_Click"/>
        <Button Name="btnDelete" Content="Delete" HorizontalAlignment="Left" Margin="284,375,0,0" VerticalAlignment="Top" Click="btnDelete_Click"/>

    </Grid>
</Window>
