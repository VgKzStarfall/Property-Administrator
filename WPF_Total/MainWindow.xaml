<Window x:Class="MultiPage_A.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiPage_A"
        mc:Ignorable="d" Title="Group 5 Application" Height="600" Width="1000">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="Aqua" />
            <Setter Property="FontSize" Value="24" />
        </Style>
    </Window.Resources>


    <Grid>
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
        <Frame x:Name="frMain" NavigationUIVisibility="Visible" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2">
            <Frame.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0"/>
                    <RotateTransform/>
                    <TranslateTransform X="0"/>
                </TransformGroup>
            </Frame.RenderTransform>
        </Frame>
        <Label x:Name="lb_Main" Content="Property Management" HorizontalAlignment="Left" VerticalAlignment="Top" Height="52" Width="907" FontSize="22" Margin="40,28,0,0" FontStyle="Italic" HorizontalContentAlignment="Center" FontWeight="Bold" Foreground="White" VerticalContentAlignment="Center">
            <Label.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="Purple" Offset="0.643"/>
                </LinearGradientBrush>
            </Label.Background>
            <Label.Effect>
                <DropShadowEffect/>
            </Label.Effect>
        </Label>
        <Button Content="1" Name="btnToPage01" Click="btnToPage01_Click"  
                HorizontalAlignment="Left" Margin="159,476,0,56" Width="93" FontWeight="Bold" BorderBrush="Black" Background="White"/>
        <Button Content="2" Name="btnToPage02" Click="btnToPage02_Click"
                HorizontalAlignment="Left" Margin="257,476,0,56" Width="93" FontWeight="Bold" BorderBrush="Black" Background="Black" Foreground="White"/>

        <Button Content="Manager" x:Name="btnOption1" Click="btnOption1_Click"
            HorizontalAlignment="Left" Margin="40,166,0,371" Width="238" FontWeight="Bold" Visibility="Visible" Background="White" BorderBrush="Black"/>


        <Label x:Name="lb_Main_Copy" Content="Theme" HorizontalAlignment="Left" VerticalAlignment="Top" Height="52" Width="102" FontSize="22" Margin="40,476,0,0" FontStyle="Italic" HorizontalContentAlignment="Center" FontWeight="Bold" Foreground="White" VerticalContentAlignment="Center">
            <Label.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="Purple" Offset="0.643"/>
                </LinearGradientBrush>
            </Label.Background>
            <Label.Effect>
                <DropShadowEffect/>
            </Label.Effect>
        </Label>

        <Label x:Name="lb_Info" Content="Group 5" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="132" FontSize="15" Margin="815,498,0,0" FontStyle="Italic" HorizontalContentAlignment="Center" FontWeight="Bold" Foreground="White" VerticalContentAlignment="Center">
            <Label.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="Purple" Offset="0.643"/>
                </LinearGradientBrush>
            </Label.Background>
            <Label.Effect>
                <DropShadowEffect/>
            </Label.Effect>
        </Label>
        <Label Content="Member" HorizontalAlignment="Left" Margin="40,135,0,0" VerticalAlignment="Top" Width="55" FontStyle="Italic" Background="White"/>
        <Label Content="Property" HorizontalAlignment="Left" Margin="374,135,0,0" VerticalAlignment="Top" Width="55" FontStyle="Italic" Background="White"/>
        <Button Content="View" x:Name="btnOption2"
            HorizontalAlignment="Left" Margin="374,166,0,371" Width="238" FontWeight="Bold" Visibility="Visible" Background="White" BorderBrush="Black" Click="btnOption2_Click"/>

    </Grid>

</Window>
